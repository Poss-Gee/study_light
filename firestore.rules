
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Users can read/update their own profile, teachers can read all profiles
    match /users/{userId} {
      allow read: if isSignedIn();
      allow update: if request.auth.uid == userId;
      allow create: if isSignedIn();
    }
    
    // Subjects can be read by anyone signed in, but only written by teachers (not yet implemented)
    match /subjects/{subjectId} {
      allow read: if isSignedIn();
      
      // Notes can be read by anyone signed in
      match /notes/{noteId} {
        allow read: if isSignedIn();
      }
    }
    
    // Quizzes can be read by anyone signed in
    match /quizzes/{quizId} {
       allow read, write: if isSignedIn();
    }
    
    // Allow signed-in users to query the submissions collection group
    match /{path=**}/submissions/{submissionId} {
      allow read, create: if isSignedIn();
    }
  }
}
