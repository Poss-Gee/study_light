rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow public read for subjects and quizzes
    match /subjects/{subjectId} {
      allow read: if request.auth != null;
      
      // Allow any authenticated user to manage notes
      match /notes/{noteId} {
         allow read, write, delete: if request.auth != null;
      }
    }
    
    match /quizzes/{quizId} {
      allow read: if request.auth != null;
    }

    // Allow users to be created (register) and read by any authenticated user
    match /users/{userId} {
      allow read, create: if request.auth != null;
      // Allow users to update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to create submissions
    match /submissions/{submissionId} {
       allow create: if request.auth != null;
       // Allow a user to read their own submissions
       allow read: if request.auth != null && resource.data.studentId == request.auth.uid;
    }
    
    // Allow teachers to manage quizzes, subjects, and notes
    match /subjects/{subjectId} {
       allow write, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }
     match /quizzes/{quizId} {
      allow write, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }
    
  }
}