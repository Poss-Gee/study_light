rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/update their own profile, but not others.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      // Teachers can read student profiles
      allow get: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }

    // Allow authenticated users to read subjects and quizzes
    match /subjects/{subjectId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
      allow list: if request.auth != null;
    }

    match /subjects/{subjectId}/notes/{noteId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
        allow list: if request.auth != null;
    }
    
    match /quizzes/{quizId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
        allow list, get: if request.auth != null;
    }

    // Students can create submissions.
    // Authenticated users (i.e., teachers) can list submissions for a quiz.
    match /{path=**}/submissions/{submissionId} {
       allow create: if request.auth.uid == request.resource.data.studentId;
       allow list: if request.auth != null;
    }
  }
}
