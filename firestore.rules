
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to most collections, but restrict writes.
    // In a real production app, you'd have more granular rules.
    match /subjects/{subjectId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write

      match /notes/{noteId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }

    match /quizzes/{quizId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /submissions/{submissionId} {
      allow read: if true;
      // Students can only create submissions for themselves.
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      allow update, delete: if false; // Submissions are immutable
    }

    match /users/{userId} {
        allow read: if true;
        // Users can only create/update their own profile.
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
